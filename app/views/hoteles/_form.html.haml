= form_for @hotel, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @hotel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hotel.errors.count, "error")}"
      %ul
        - @hotel.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nombre, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :nombre, class: 'form-control'
  .form-group
    = f.label :descripcion, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :descripcion, class: 'form-control'
  .form-group
    = f.label :email, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :email, class: 'form-control'
  .form-group
    = f.label :website, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :website, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
