= form_for @programa, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @programa.errors.any?
    #error_explanation
      %h2= "#{pluralize(@programa.errors.count, "error")}"
      %ul
        - @programa.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :titulo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :titulo, class: 'form-control'
  .form-group
    = f.label :contenido, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :contenido, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
