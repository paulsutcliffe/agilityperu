#region-requisitos.container.seccion

  .region
    .region-title
      %h1= page_title!('Requisitos Para Canes')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Requisito', new_requisito_path, class: 'btn btn-primary'


      - @requisitos.each do |requisito|
        %h3.titulos
          = requisito.pais
        .descripcion
          = requisito.contenido
        - if current_admin
          = link_to 'Editar', edit_requisito_path(requisito), class: 'btn btn-success'
          = link_to 'Eliminar', requisito, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
