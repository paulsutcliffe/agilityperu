#region-streamings.container

  .region
    .region-title
      %h1= page_title!('Señal en Vivo')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Señal en Vivo', new_streaming_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Codigo embed
            %th
            %th

          - @streamings.each do |streaming|
            %tr
              %td= link_to streaming.codigo_embed
              - if current_admin
                %td= link_to 'Editar', edit_streaming_path(streaming), class: 'btn btn-success'
                %td= link_to 'Eliminar', streaming, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
