#region-auspiciadores.container
  .region
    .region-title
      %h1= page_title!('auspiciador')

  .region
    %p
      %b Imagen:
      = @auspiciador.imagen
    %p
      %b Nombre:
      = @auspiciador.nombre
    %p
      %b Descripcion:
      = @auspiciador.descripcion

  .region
    - if current_admin
      .admin-controls
        = link_to 'Editar', edit_auspiciador_path(@auspiciador), class: 'btn btn-success'
    = link_to 'Regresar', auspiciadores_path, class: 'btn btn-warning'
