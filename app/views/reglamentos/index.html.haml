#region-reglamentos.container.seccion

  .region
    .region-title
      %h1= page_title!('reglamentos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Reglamento', new_reglamento_path, class: 'btn btn-primary'

    - @reglamentos.each do |reglamento|
      %h3.titulos
        = reglamento.titulo
      .descripcion
        = reglamento.contenido
      - if current_admin
        = link_to 'Editar', edit_reglamento_path(reglamento), class: 'btn btn-success'
        = link_to 'Eliminar', reglamento, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
