#region-costos.container

  .region
    .region-title
      %h1= page_title!('costos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Costo', new_costo_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Titulo
            %th Contenido
            %th
            %th
            %th

          - @costos.each do |costo|
            %tr
              %td= costo.titulo
              %td= costo.contenido
              %td= link_to 'Ver', costo, class: 'btn btn-info'
              - if current_admin
                %td= link_to 'Editar', edit_costo_path(costo), class: 'btn btn-success'
                %td= link_to 'Eliminar', costo, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
