#region-costos.container.seccion

  .region
    .region-title
      %h1= page_title!('costos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Costo', new_costo_path, class: 'btn btn-primary'


    - @costos.each do |costo|
      %h3.titulos
        = costo.titulo
      .descripcion
        = costo.contenido
      - if current_admin
        = link_to 'Editar', edit_costo_path(costo), class: 'btn btn-success'
        = link_to 'Eliminar', costo, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
