- content_for :javascript do
  = google_maps_api

#region-ubicacion.container.seccion
  .region
    .region-title
      %h1= page_title!('Ubicaci√≥n')

.map-wrapper
  = render 'mapa'

#region-direccion.container.seccion
  .region
    %h3.titulos
      = image_tag image_path ('img-ubicacion.png')
      = @ubicacion.lugar
    
    %p
      = @ubicacion.direccion
    %p
      = @ubicacion.descripcion
    
