= tinymce_assets
= tinymce
= form_for @juez, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @juez.errors.any?
    #error_explanation
      %h2= "#{pluralize(@juez.errors.count, "error")}"
      %ul
        - @juez.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :foto, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :foto, class: 'form-control'
  .form-group
    = f.label :nombre, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :nombre, class: 'form-control'
  .form-group
    = f.label :descripcion, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :descripcion, class: 'tinymce', :rows => 15, :cols => 30
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
