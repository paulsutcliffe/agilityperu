  .region
    .region-info
      =image_tag image_path('img-ubicacion.jpg'), :class => 'img-responsive'
      .info
        %h4.titulo
          %span UBICACI&Oacute;N
          = image_tag (image_path('icon-ubicacion.png')), class: 'icon'
