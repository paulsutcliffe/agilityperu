#region-mensajes.container

  .region
    .region-title
      %h1= page_title!('Mensajes')

      .table-responsive
        %table.table
          %tr
            %th Nombre
            %th Email
            %th Telefono
            %th Mensaje
            %th

          - @mensajes.each do |mensaje|
            %tr
              %td= mensaje.nombre
              %td= mensaje.email
              %td= mensaje.telefono
              %td= mensaje.mensaje
              - if current_admin
                %td= link_to 'Eliminar', mensaje, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
