#region-usuarios.container

  .region
    .region-title
      %h1= page_title!('Usuarios')

      .table-responsive
        %table.table
          %tr
            %th Nombre
            %th Apellido
            %th Direccion
            %th Teléfono
            %th Pais
            %th Ciudad
            %th Email
            %th Ultima fecha de logeo
            %th Fecha de Registro
            %th


          - @usuarios.each do |usuario|
            %tr
              %td= usuario.nombre
              %td= usuario.apellido
              %td= usuario.direccion
              %td= usuario.telefono
              %td= usuario.pais
              %td= usuario.ciudad
              %td= usuario.email
              %td= l usuario.last_sign_in_at, format: :short if usuario.last_sign_in_at
              %td= l usuario.created_at, format: :short
              %td= link_to 'Eliminar', usuario, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
              %td= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-success'
